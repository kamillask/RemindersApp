<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReminderActivity">

    <Spinner
        android:id="@+id/spinnerReminderTypes"
        android:layout_width="300dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="540dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextNewReminderType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="Add a new type"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerReminderTypes" />

    <Button
        android:id="@+id/button"
        android:layout_width="88dp"
        android:layout_height="42dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="40dp"
        android:onClick="onAddReminderType"
        android:text="Add type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editTextNewReminderType"
        app:layout_constraintTop_toBottomOf="@+id/spinnerReminderTypes" />

    <EditText
        android:id="@+id/editTextNewReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="Add a new reminder"
        android:inputType="text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewReminderType" />

    <Button
        android:id="@+id/save"
        android:layout_width="85dp"
        android:layout_height="43dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="168dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerReminderTypes" />

    <Switch
        android:id="@+id/daySwitch"
        android:layout_width="143dp"
        android:layout_height="33dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="16dp"
        android:text="Enable Day Alert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerReminderTypes" />

    <EditText
        android:id="@+id/dayEditText"
        android:layout_width="185dp"
        android:layout_height="39dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="268dp"
        android:focusable="false"
        android:hint="Selected Day"
        android:inputType="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerReminderTypes" />

    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="348dp"
        android:ems="10"
        android:inputType="text"
        android:hint = "Selected Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerReminderTypes" />

    <Switch
        android:id="@+id/timeSwitch"
        android:layout_width="139dp"
        android:layout_height="35dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="16dp"
        android:text="Enable Time Alert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerReminderTypes" />

</androidx.constraintlayout.widget.ConstraintLayout>
